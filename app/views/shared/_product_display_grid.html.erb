<% @skus.in_groups_of(3, false).each do |group| %>
            <div class="row"">
                  <% group.each do |sku| %>
                  <a data-toggle="modal" data-id="<%= sku %>" title="Product Description" class="openDescModal" href="#ProdInfoModal">
                  <div class="col-lg-4" >
                    <%= image_tag(sku.stock_photo_uri, class: 'list_image', size: '150x200') %><br/>
                    <%= sku.name %> <br/>
                    <%= "Price: $#{sku.price}" %> <br/>
                    <%= button_to "Add to Cart", :action => :add_to_cart, :id => sku%>
                  </div>
                  </a>
                  <% end %>
            </div>
            <hr/>
<% end %>

<div id="ProdInfoModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="Product Info" aria-hidden="true">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Product Description</h3>
  </div>
  <div class="modal-body">
    <p id="price"></p>
  </div>
</div>

<script type="text/javascript">
$('#ProdInfoModal').on('show.bs.modal', function (event) {
  var link = $(event.relatedTarget) // Button that triggered the modal
  var sku = link.data('id') // Extract info from data-* attributes

  var modal = $(this)
  modal.find('.modal-body price').innerHTML = sku.price
})
